<Window x:Class="AppHockeyClub.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppHockeyClub"
        mc:Ignorable="d"
        Title="Регистрация" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">


    <Window.Resources>
        
        <Style x:Key="RegistrationTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3E3E40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>

        
        <Style x:Key="RegisterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF0086F0"/>
                                <Setter Property="BorderBrush" Value="#FF0086F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005999"/>
                                <Setter Property="BorderBrush" Value="#FF005999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#FF252526">
        <Border Background="#FF2D2D30" 
                CornerRadius="5"
                Width="380"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="25">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Регистрация"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    
                    <TextBlock Text="Имя"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,3"/>
                    <TextBox x:Name="txtName"
                             Style="{StaticResource RegistrationTextBoxStyle}"
                             TabIndex="1"/>

                    <TextBlock Text="Фамилия"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,3"/>
                    <TextBox x:Name="txtSurname"
                             Style="{StaticResource RegistrationTextBoxStyle}"
                             TabIndex="2"/>

                    <TextBlock Text="Отчество"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,3"/>
                    <TextBox x:Name="txtPatronymic"
                             Style="{StaticResource RegistrationTextBoxStyle}"
                             TabIndex="3"/>


                    <TextBlock Text="Телефон"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,5,0,3"/>
                    <TextBox x:Name="txtPhone"
                             Style="{StaticResource RegistrationTextBoxStyle}"
                             TabIndex="4"/>

                    <TextBlock Text="Email"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,3"/>
                    <TextBox x:Name="txtEmail"
                             Style="{StaticResource RegistrationTextBoxStyle}"
                             TabIndex="5"/>


                    <TextBlock Text="Пароль"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,5,0,3"/>
                    <PasswordBox x:Name="txtPassword"
                                 Background="#FF252526"
                                 Foreground="White"
                                 BorderBrush="#FF3E3E40"
                                 BorderThickness="1"
                                 FontSize="14"
                                 Padding="8"
                                 Width="250"
                                 Margin="0,0,0,10"/>

                    <Button x:Name="btnRegister"
                            Content="ЗАРЕГИСТРИРОВАТЬСЯ"
                            Style="{StaticResource RegisterButtonStyle}"
                            HorizontalAlignment="Center"
                            TabIndex="7" Click="btnRegister_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
